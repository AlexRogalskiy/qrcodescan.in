{
	"name": "qr-code-scanner",
	"description": "QR Code Scanner is the fastest and most user-friendly web application.",
	"version": "1.0.0",
	"scripts": {
		"build": "rollup -c",
    "start": "rollup -c -w",
		"precommit": "lint-staged",
		"pretty": "prettier --write 'app/**/*.js'",
		"deploy": "npm run build && gh-pages -d dist -b gh-pages"
	},
	"lint-staged": {
		"*.{js,css,html}": [
			"npm run pretty",
			"git add"
		]
	},
	"engines": {
		"node": ">=14.17.1"
	},
	"devDependencies": {
		"cross-env": "^7.0.3",
		"gh-pages": "^3.2.1",
		"html-webpack-plugin": "^5.3.1",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"prettier": "^2.3.1"
	},
	"dependencies": {
		"rollup": "^2.51.2"
	}
}
